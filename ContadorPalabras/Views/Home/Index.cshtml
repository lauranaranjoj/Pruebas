<div>
    <h1 class="display-4 text-center">Prueba Técnica</h1>
    <div class="row">
        <div class="col-lg-12">
            <label style="text-align:left" for="txtTexto">Por favor ingrese el texto:</label>
            <textarea id="txtTexto" style="width:100%" rows="6"></textarea>
        </div>
    </div>
    <div class="text-right">
        <button class="btn btn-primary" id="btnContarPalabras">Contar Palabras</button>
    </div>

    <hr />
    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <table class="table table-bordered table-striped" style="width:100%" id="tablaResultados">
                <thead>
                    <tr>
                        <th>Palabra</th>
                        <th>Repeticiones</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

</div>

@section scripts{
    <script src="~/scripts/views/HomeIndex.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
}
